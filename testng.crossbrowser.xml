<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Cross_Browser" parallel="tests" thread-count="3">
   <listeners>
		<listener class-name="com.amazon.utility.ListenerClass"></listener>
	</listeners>
  <test  name="CromeTest">
  <parameter name="browser" value="Chrome"></parameter>
 
    <classes>
      <class name="com.amazon.testcases.LoginPageTest"/>
      <class name="com.amazon.testcases.SearchReasultPageTest"/>
      <class name="com.amazon.testcases.HomePageTest"/>
      <class name="com.amazon.testcases.IndexPageTest"/>
    </classes>
  </test>
  
  <listeners>
		<listener class-name="com.amazon.utility.ListenerClass"></listener>
	</listeners>
  <test  name="FirefoxTest">
  <parameter name="browser" value="Firefox"></parameter>
   
    <classes>
      <class name="com.amazon.testcases.LoginPageTest"/>
      <class name="com.amazon.testcases.SearchReasultPageTest"/>
      <class name="com.amazon.testcases.HomePageTest"/>
      <class name="com.amazon.testcases.IndexPageTest"/>
    </classes>
  </test>
  
 
  
  
   <!-- Test -->
</suite> <!-- Suite -->
